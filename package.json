{
  "name": "template-extensions",
  "version": "0.2.0",
  "description": "",
  "type": "module",
  "main": "src/index.js",
  "types": "src/types.d.ts",
  "scripts": {
    "format": "prettier --write .",
    "test": "web-test-runner **/*test.js --config test/web-test-runner.config.js",
    "dev": "esbuild ./interhtml.js --servedir=. --outdir=dist --bundle --format=esm",
    "build": "esbuild ./interhtml.js --define:globalThis.PROD=true --tree-shaking=true --outdir=dist --minify --bundle --format=esm && yarn size",
    "size": "echo \"\\n  dist/\\033[1minterhtml.js\\033[0m     \\033[0;32m$(($(cat dist/interhtml.js | gzip -c9 | wc -c)))B gzip\\033[0m\\n\""
  },
  "keywords": [],
  "author": "Wesley Luyten <me@wesleyluyten.com> (https://wesleyluyten.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/luwes/template-extensions/issues"
  },
  "homepage": "https://github.com/luwes/template-extensions#readme",
  "devDependencies": {
    "@open-wc/testing": "^3.1.6",
    "@web/test-runner": "^0.14.0",
    "esbuild": "^0.15.14",
    "eslint": "^8.24.0",
    "prettier": "^2.7.1"
  },
  "prettier": {
    "singleQuote": true
  },
  "eslintConfig": {
    "globals": {
      "globalThis": false
    },
    "env": {
      "browser": true,
      "es6": true,
      "node": true,
      "mocha": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module"
    },
    "rules": {
      "semi": "error"
    }
  }
}
